<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventX</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoEventX.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="eventx-header">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="eventx-logo">
                        <div class="hexagon">
                            <i class="fas fa-star"></i>
                        </div>
                        <span class="brand-text">EventX</span>
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Eventos" asp-action="Index">
                                <i class="fas fa-calendar-alt"></i> Eventos
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="fas fa-user-circle"></i> @User.Identity.Name
                                </a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link">
                                        <i class="fas fa-sign-out-alt"></i> Sair
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-user"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Cadastro
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">EVENTOS EM UM SÓ LUGAR</h1>
                <p class="hero-subtitle">compartilhe, planeje, convide e gerencie com facilidade</p>
            </div>
            <div class="hero-actions">
                <a href="#" class="btn btn-primary btn-hero">Criar meu evento</a>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Quick Actions -->
    <section class="quick-actions">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <h5>Convidar Pessoas</h5>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-calendar-plus"></i>
                        </div>
                        <h5>Criar Evento</h5>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-handshake"></i>
                        </div>
                        <h5>Escolher Fornecedores</h5>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <h5>Gerenciar Orçamento</h5>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Categories -->
    <section class="categories-section">
        <div class="container">
            <div class="text-center mb-4">
                <a href="#" class="btn btn-outline-primary btn-explore">
                    <i class="fas fa-star"></i> Explorar Fornecedores
                </a>
            </div>
            <div class="categories-grid">
                <div class="category-item">
                    <div class="category-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <span>Convites</span>
                </div>
                <div class="category-item">
                    <div class="category-icon">
                        <i class="fas fa-palette"></i>
                    </div>
                    <span>Decoração</span>
                </div>
                <div class="category-item">
                    <div class="category-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <span>Espaços</span>
                </div>
                <div class="category-item">
                    <div class="category-icon">
                        <i class="fas fa-camera"></i>
                    </div>
                    <span>Fotógrafo</span>
                </div>
                <div class="category-item">
                    <div class="category-icon">
                        <i class="fas fa-music"></i>
                    </div>
                    <span>Música</span>
                </div>
                <div class="category-item">
                    <div class="category-icon">
                        <i class="fas fa-gift"></i>
                    </div>
                    <span>Lembrancinha</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="eventx-footer">
        <div class="container">
            <div class="text-center">
                <div class="footer-logo">
                    <div class="hexagon">
                        <i class="fas fa-star"></i>
                    </div>
                </div>
                <p>&copy; 2025 - EventX - Onde organizar e amar compartilhar o seu evento é só o começo.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>