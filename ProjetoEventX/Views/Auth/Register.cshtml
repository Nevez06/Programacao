@model ProjetoEventX.Controllers.RegisterViewModel

@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-primary">
                            <i class="fas fa-calendar-alt"></i> EventX
                        </h2>
                        <p class="text-muted">Crie sua conta de organizador</p>
                    </div>

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nome" class="form-label">
                                    <i class="fas fa-user"></i> Nome Completo
                                </label>
                                <input asp-for="Nome" class="form-control" placeholder="Seu nome completo" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope"></i> Email
                                </label>
                                <input asp-for="Email" class="form-control" placeholder="seu@email.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label">
                                    <i class="fas fa-lock"></i> Senha
                                </label>
                                <input asp-for="Password" class="form-control" placeholder="Mínimo 6 caracteres" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="fas fa-lock"></i> Confirmar Senha
                                </label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirme sua senha" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefone" class="form-label">
                                    <i class="fas fa-phone"></i> Telefone
                                </label>
                                <input asp-for="Telefone" class="form-control" placeholder="11999999999" />
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Cpf" class="form-label">
                                    <i class="fas fa-id-card"></i> CPF
                                </label>
                                <input asp-for="Cpf" class="form-control" placeholder="000.000.000-00" />
                                <span asp-validation-for="Cpf" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Endereco" class="form-label">
                                <i class="fas fa-map-marker-alt"></i> Endereço
                            </label>
                            <input asp-for="Endereco" class="form-control" placeholder="Seu endereço completo" />
                            <span asp-validation-for="Endereco" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i ></i>
                                <a asp-controller="Home" asp-action="Index" class="fas fa-user-plus">Criar Conta</a>

                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted">
                            Já tem uma conta? 
                            <a asp-action="Login" class="text-primary fw-bold">Faça login aqui</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

