@{
    ViewData["Title"] = "Escolha o tipo de login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <h2 class="fw-bold text-primary mb-3">
                        <i class="fas fa-calendar-alt"></i> EventX
                    </h2>
                    <p class="text-muted mb-4">Escolha como deseja entrar no sistema</p>

                    <div class="d-grid gap-3">
                        <a asp-controller="Auth" asp-action="LoginOrganizador" class="btn btn-outline-primary btn-lg rounded-pill">
                            <i class="fas fa-user-tie me-2"></i> Entrar como <strong>Organizador</strong>
                        </a>

                        <a asp-controller="Auth" asp-action="LoginFornecedor" class="btn btn-outline-success btn-lg rounded-pill">
                            <i class="fas fa-store me-2"></i> Entrar como <strong>Fornecedor</strong>
                        </a>

                        <a asp-controller="Auth" asp-action="LoginConvidado" class="btn btn-outline-info btn-lg rounded-pill">
                            <i class="fas fa-user-friends me-2"></i> Entrar como <strong>Convidado</strong>
                        </a>
                    </div>

                    <hr class="my-4" />

                    <p class="text-muted">
                        NÃ£o tem uma conta?
                    </p>

                    <div class="d-grid gap-2">
                        <a asp-controller="Auth" asp-action="RegistroOrganizador" class="btn btn-primary rounded-pill">
                            <i class="fas fa-user-plus me-2"></i> Cadastrar Organizador
                        </a>
                        <a asp-controller="Auth" asp-action="RegistroFornecedor" class="btn btn-success rounded-pill">
                            <i class="fas fa-store-alt me-2"></i> Cadastrar Fornecedor
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a2d9b5a86d.js" crossorigin="anonymous"></script>
}
