@model ProjetoEventX.Models.LoginConvidadoViewModel
@{
    ViewData["Title"] = "Login - Convidado";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-eventx mt-5">
                <div class="card-body">
                    <h2 class="text-center mb-4" style="color: var(--eventx-primary);">Login Convidado</h2>
                    
                    <form asp-action="LoginConvidado" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="NomeEvento" class="form-label"></label>
                            <input asp-for="NomeEvento" class="form-control" placeholder="Digite o nome do evento" />
                            <span asp-validation-for="NomeEvento" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Senha" class="form-label"></label>
                            <input asp-for="Senha" class="form-control" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-eventx-primary">Entrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



