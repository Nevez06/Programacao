<style>
    :root {
        --eventx-primary: #992008;
        --eventx-text: #000;
    }

    body {
        color: var(--eventx-text);
        font-family: 'Poppins', sans-serif;
    }

    /* HERO */
    .hero-img {
        width: 70%;
        height: 450px;
        object-fit: cover;
        border-radius: 40px;
        display: block;
        margin-bottom:10%;
    }

    .hero-content {
        z-index: 2;
        color: #fff;
        text-shadow: 0px 2px 10px rgba(0,0,0,0.4);
        
    }

    /* Centralizar imagem bottom e conteúdo */
    .bottom-section {
        position: relative;
    }

        .bottom-section .hero-img {
            display: block;
            margin: 0 auto;
        }

        .bottom-section .hero-content {
            width: 100%;
            text-align: center;
        }


    /* BOTÕES */
    .btn-eventx-primary {
        background-color: var(--eventx-primary);
        color: #fff;
        border: none;
        border-radius: 30px;
        padding: 0.8rem 1.8rem;
        font-weight: 600;
        transition: 0.3s ease;
    }

        .btn-eventx-primary:hover {
            background-color: #b32a12;
            transform: translateY(-2px);
        }

    .btn-eventx-secondary {
        background-color: #fff;
        border: 2px solid var(--eventx-primary);
        border-radius: 30px;
        padding: 0.8rem 1.8rem;
        font-weight: 600;
        transition: 0.3s ease;
        color: #000;
    }

        .btn-eventx-secondary i {
            color: var(--eventx-primary);
        }

        .btn-eventx-secondary:hover {
            background-color: var(--eventx-primary);
            color: #fff;
        }

            .btn-eventx-secondary:hover i {
                color: #fff;
            }
   /* WRAPPER CENTRALIZADO — igual largura das imagens */
.depoimentos-wrapper{
    width: 1100px;              /* largura exata solicitada */
    height: 60px;               /* altura exata solicitada */
    margin: 0 auto;             /* centraliza */
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 60px;
}

/* CONTAINER DA ABA */
.depo-tabs {
    width: 100%;                /* ocupa toda a largura do wrapper */
    height: 100%;               /* ocupa 80px de altura */
    border: 2px solid var(--eventx-primary);
    border-radius: 40px;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    background: #fff;           /* agora pega a área inteira */
    overflow: hidden;
}

/* BOTÕES */
.tab-btn {
    flex: 1;
    height: 100%;               /* botão ocupa a altura inteira */
    border: none;
    background: transparent;
    font-weight: 600;
    cursor: pointer;
    color: var(--eventx-primary);
    font-size: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* ESTADO ATIVO */
.tab-btn.active {
    background: var(--eventx-primary);
    color: #fff !important;
}

.tab-btn.active i {
    margin-right: 8px;
    color: #fff;
}

/* MELHOR VISIBILIDADE */
.depo-tabs button:hover {
    filter: brightness(0.95);
}
    /* 🔥 BOTÃO VIEW 231 */ .view-btn {
        background: #fff;
        border: 2px solid var(--eventx-primary);
        border-radius: 40px;
        padding: 10px 40px;
        font-weight: 600;
        font-size: 16px;
        color: var(--eventx-primary);
        cursor: pointer;
        transition: 0.3s;
        width:800px;
        height: 60px;
    }

        .view-btn:hover {
            background: var(--eventx-primary);
            color: #fff;
        }

    /* Responsivo */
    @@media (max-width: 991px) {
        .hero-img

    {
        height: 300px;
    }

    .btn-eventx-primary, .btn-eventx-secondary {
        width: 100%;
    }

    }
</style>
