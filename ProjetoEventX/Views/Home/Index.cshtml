@{
    ViewData["Title"] = "EventX - Eventos em um só lugar";
}

<!-- HERO -->
<section class="hero text-center text-white position-relative overflow-hidden">

    <!-- Imagem superior -->
    <div class="hero-section bottom-section position-relative mt-5 text-center">
        <img src="@Url.Content("~/Images/bg-top.png")" alt="Imagem superior" class="hero-img rounded-5 shadow-lg">
        <div class="hero-content position-absolute top-50 start-50 translate-middle text-center">
            <h4 class="fw-normal">Compartilhe, planeje, convide e gerencie com facilidade</h4>
            <h1 class="fw-bold text-uppercase mt-2">EVENTOS EM UM SÓ LUGAR</h1>

            <div class="d-flex flex-column flex-md-row gap-3 mt-4 justify-content-center">
                <a asp-controller="Auth" asp-action="LoginConvidado" class="btn btn-eventx-primary">Sou Convidado</a>
                <a asp-controller="Auth" asp-action="LoginOrganizador" class="btn btn-eventx-primary">Organizador</a>
                <a asp-controller="Auth" asp-action="LoginFornecedor" class="btn btn-eventx-primary">Fornecedor</a>
            </div>
        </div>
    </div>

    <!-- Imagem inferior -->
    <!-- Imagem inferior -->
    <div class="hero-section bottom-section position-relative mt-5 text-center">

        <img src="@Url.Content("~/Images/bg-bottom.png")"
             alt="Imagem inferior"
             class="hero-img rounded-5 shadow-lg mx-auto d-block">

        <!-- CONTEÚDO CENTRALIZADO -->
        <div class="hero-content position-absolute text-start" style="left: 20%; top: 40%;">

            <h2 class="fw-bold text-uppercase mb-2">EventX</h2>

            <p class="lead fw-semibold">
                Onde organizar e amar compartilhar o seu evento é só o começo.
            </p>

