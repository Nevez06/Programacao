@model ProjetoEventX.Models.Evento

@{
    ViewData["Title"] = "Criar Evento";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="event-card">
            <div class="event-card-header">
                <h3 class="mb-0">
                    <i class="fas fa-plus-circle"></i> Criar Novo Evento
                </h3>
                <p class="mb-0 opacity-75">Preencha os detalhes do seu evento</p>
            </div>
            <div class="event-card-body">
                <!-- Mostrar mensagens de erro/sucesso -->
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-action="Create" id="eventoForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="NomeEvento" class="form-label">
                                <i class="fas fa-calendar"></i> Nome do Evento
                            </label>
                            <input asp-for="NomeEvento" class="form-control" placeholder="Digite o nome do evento" />
                            <span asp-validation-for="NomeEvento" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TipoEvento" class="form-label">
                                <i class="fas fa-tag"></i> Tipo do Evento
                            </label>
                            <select asp-for="TipoEvento" class="form-control">
                                <option value="">Selecione o tipo</option>
                                <option value="Casamento">üíç Casamento</option>
                                <option value="Anivers√°rio">üéÇ Anivers√°rio</option>
                                <option value="Corporativo">üíº Corporativo</option>
                                <option value="Festa">üéâ Festa</option>
                                <option value="Confer√™ncia">üìä Confer√™ncia</option>
                                <option value="Formatura">üéì Formatura</option>
                                <option value="Workshop">üõ†Ô∏è Workshop</option>
                                <option value="Outros">üìã Outros</option>
                            </select>
                            <span asp-validation-for="TipoEvento" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DataEvento" class="form-label">
                                <i class="fas fa-calendar-day"></i> Data do Evento
                            </label>
                            <input asp-for="DataEvento" type="date" class="form-control" />
                            <span asp-validation-for="DataEvento" class="text-danger"></span>
                            <small class="form-text text-muted">A data deve ser futura</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="StatusEvento" class="form-label">
                                <i class="fas fa-info-circle"></i> Status
                            </label>
                            <select asp-for="StatusEvento" class="form-control">
                                <option value="Planejado">üìã Planejado</option>
                                <option value="Em Andamento">‚è≥ Em Andamento</option>
                                <option value="Conclu√≠do">‚úÖ Conclu√≠do</option>
                                <option value="Cancelado">‚ùå Cancelado</option>
                            </select>
                            <span asp-validation-for="StatusEvento" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DescricaoEvento" class="form-label">
                            <i class="fas fa-align-left"></i> Descri√ß√£o do Evento
                        </label>
                        <textarea asp-for="DescricaoEvento" class="form-control" rows="4" placeholder="Descreva os detalhes do seu evento..."></textarea>
                        <span asp-validation-for="DescricaoEvento" class="text-danger"></span>
                        <small class="form-text text-muted">Forne√ßa detalhes que ajudem no planejamento</small>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="HoraInicio" class="form-label">
                                <i class="fas fa-clock"></i> Hora de In√≠cio
                            </label>
                            <input asp-for="HoraInicio" class="form-control hora-input" placeholder="18:00" maxlength="5" />
                            <span asp-validation-for="HoraInicio" class="text-danger"></span>
                            <small class="form-text text-muted">Formato: HH:MM (ex: 18:00)</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="HoraFim" class="form-label">
                                <i class="fas fa-clock"></i> Hora de Fim
                            </label>
                            <input asp-for="HoraFim" class="form-control hora-input" placeholder="22:00" maxlength="5" />
                            <span asp-validation-for="HoraFim" class="text-danger"></span>
                            <small class="form-text text-muted">Formato: HH:MM (ex: 22:00)</small>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PublicoEstimado" class="form-label">
                                <i class="fas fa-users"></i> P√∫blico Estimado
                            </label>
                            <input asp-for="PublicoEstimado" type="number" class="form-control" placeholder="50" min="1" max="10000" />
                            <span asp-validation-for="PublicoEstimado" class="text-danger"></span>
                            <small class="form-text text-muted">N√∫mero de pessoas esperadas</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="CustoEstimado" class="form-label">
                                <i class="fas fa-dollar-sign"></i> Custo Estimado
                            </label>
                            <input asp-for="CustoEstimado" class="form-control dinheiro-input" placeholder="R$ 0,00" />
                            <span asp-validation-for="CustoEstimado" class="text-danger"></span>
                            <small class="form-text text-muted">Or√ßamento previsto para o evento</small>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Voltar para a Lista
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save"></i> Criar Evento
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/formatacao.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Aplicar valida√ß√µes adicionais
            const form = document.getElementById('eventoForm');
            const dataEvento = document.querySelector('input[name="DataEvento"]');
            const horaInicio = document.querySelector('input[name="HoraInicio"]');
            const horaFim = document.querySelector('input[name="HoraFim"]');
            
            // Definir data m√≠nima como hoje
            const hoje = new Date();
            const dataMinima = hoje.toISOString().split('T')[0];
            if (dataEvento) {
                dataEvento.setAttribute('min', dataMinima);
            }
            
            // Valida√ß√£o no envio do formul√°rio
            form.addEventListener('submit', function(e) {
                let valido = true;
                
                // Validar hora de in√≠cio
                if (horaInicio && horaInicio.value && !validarHora(horaInicio.value)) {
                    mostrarErro(horaInicio, 'Formato de hora inv√°lido (use HH:MM)');
                    valido = false;
                }
                
                // Validar hora de fim
                if (horaFim && horaFim.value && !validarHora(horaFim.value)) {
                    mostrarErro(horaFim, 'Formato de hora inv√°lido (use HH:MM)');
                    valido = false;
                }
                
                // Validar se hora de fim √© maior que hora de in√≠cio
                if (horaInicio && horaFim && horaInicio.value && horaFim.value) {
                    const [horaIni, minIni] = horaInicio.value.split(':').map(Number);
                    const [horaEnd, minEnd] = horaFim.value.split(':').map(Number);
                    
                    const minutosInicio = horaIni * 60 + minIni;
                    const minutosFim = horaEnd * 60 + minEnd;
                    
                    if (minutosFim <= minutosInicio) {
                        mostrarErro(horaFim, 'Hora de fim deve ser maior que hora de in√≠cio');
                        valido = false;
                    }
                }
                
                if (!valido) {
                    e.preventDefault();
                }
            });
            
            function mostrarErro(campo, mensagem) {
                // Remove erros anteriores
                const erroExistente = campo.parentNode.querySelector('.erro-customizado');
                if (erroExistente) {
                    erroExistente.remove();
                }
                
                // Adiciona novo erro
                const spanErro = document.createElement('span');
                spanErro.className = 'text-danger erro-customizado';
                spanErro.textContent = mensagem;
                campo.parentNode.appendChild(spanErro);
                
                // Adiciona classe de erro ao campo
                campo.classList.add('is-invalid');
                
                // Remove erro quando campo for alterado
                campo.addEventListener('input', function() {
                    campo.classList.remove('is-invalid');
                    if (spanErro && spanErro.parentNode) {
                        spanErro.remove();
                    }
                }, { once: true });
            }
        });
    </script>
}
