@{
    ViewData["Title"] = "Administra√ß√£o - Gastos";
    var evento = ViewBag.Evento as ProjetoEventX.Models.Evento;
    var despesas = ViewBag.Despesas as IEnumerable<ProjetoEventX.Models.Despesa>;
    var totalGasto = ViewBag.TotalGasto ?? 0m;
    var totalPedidos = ViewBag.TotalPedidos ?? 0m;
    var totalGeral = ViewBag.TotalGeral ?? 0m;
}

<div class="container">
    <h1 class="mb-4" style="color: var(--eventx-primary);">Administra√ß√£o - @(evento?.NomeEvento ?? "Evento")</h1>
    
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="dashboard-card text-center">
                <h3>R$ @totalGasto.ToString("N2")</h3>
                <p>Total em Despesas</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="dashboard-card text-center">
                <h3>R$ @totalPedidos.ToString("N2")</h3>
                <p>Total em Pedidos</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="dashboard-card text-center">
                <h3>R$ @totalGeral.ToString("N2")</h3>
                <p>Total Geral</p>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-8">
            <div class="dashboard-card">
                <h3>Adicionar Despesa</h3>
                <form asp-action="AdicionarDespesa" method="post">
                    <input type="hidden" name="eventoId" value="@evento.Id" />
                    <div class="mb-3">
                        <label class="form-label">Descri√ß√£o</label>
                        <input type="text" name="Descricao" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Valor (R$)</label>
                        <input type="number" step="0.01" name="Valor" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-eventx-primary">Adicionar</button>
                </form>
            </div>
            
            <div class="dashboard-card mt-4">
                <h3>Hist√≥rico de Despesas</h3>
                @if (despesas != null && despesas.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Data</th>
                                <th>Descri√ß√£o</th>
                                <th>Valor</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var despesa in despesas)
                            {
                                <tr>
                                    <td>@despesa.DataDespesa.ToString("dd/MM/yyyy")</td>
                                    <td>@despesa.Descricao</td>
                                    <td>R$ @despesa.Valor.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Nenhuma despesa registrada ainda.</p>
                }
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="dashboard-card">
                <h3>A√ß√µes</h3>
                <div class="d-grid gap-2">
                    <a asp-action="RelatorioGastos" asp-route-eventoId="@evento.Id" class="btn btn-eventx-secondary">üìä Relat√≥rio de Gastos</a>
                    <a asp-controller="Organizador" asp-action="DetalhesEvento" asp-route-id="@evento.Id" class="btn btn-eventx-secondary">‚Üê Voltar ao Evento</a>
                </div>
            </div>
        </div>
    </div>
</div>

